<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="148dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="150dp"
        android:text="Temperature en  °C"
        android:textColor="#F44336"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="148dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="112dp"
        android:text="température en °F "
        android:textColor="#F44336"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonConvertir"
        android:layout_width="162dp"
        android:layout_height="62dp"
        android:layout_marginTop="99dp"
        android:backgroundTint="#FFC107"
        android:text="Convertir "
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFere" />

    <EditText
        android:id="@+id/editTextCels"
        android:layout_width="202dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="145dp"
        android:background="@drawable/bginput"
        android:backgroundTint="#E4DEDE"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextFere"
        android:layout_width="191dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/bginput"
        android:backgroundTint="#F8F5F6"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/editTextCels" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="187dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Température"
        android:textColor="#F44336"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>